<div id="user_show" class="container">
  <div id="user_name">
    Name: <%= @user.name %>
  </div>
  <div id="user_email">
    Email: <%= @user.email %>
  </div>
  <div id="in_beijing">
    In Beijing:
    <% if @user.in_beijing? %>
      Yes
    <% else %>
      No
    <% end %>
  </div>

  <% if current_user && current_user.id == @user.id %>
    <%= link_to "Edit Your Profile", edit_user_path(@user) %>
  <% end %>
</div><!-- user_show -->

