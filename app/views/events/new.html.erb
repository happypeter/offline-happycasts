<%= form_for @event do |f| %>
 <%= f.label :title %>
 <br>
 <%= f.text_field :title %>
 <br>
 <%= f.label :time %>
 <br>
 <%= f.datetime_select :time,
   :required => false,
   :default => @default_time,
   :discard_hour => true
 %>
 <br>
 <%= f.label :content %>
 <br>
 <%= f.text_area :content %>
 <br>
 <%= f.submit "create_event" %>
<% end %>

