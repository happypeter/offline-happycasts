<div class="issue-heading">
  <div class="container clearfix">
    <%= @issue.title %>
  </div>
</div>
<div class="container">
  <div class="replies">
    <article class="reply clearfix">
      <div class="avatar">
        <%= link_to @issue.user do %>
          <img src=<%= @issue.user.avatar %> alt="" class="image-circle">
        <% end %>
      </div>
      <div class="body">
        <div class="heading">
          <h5 class="name"><%= link_to @issue.user.name %></h5>
          <span class="datetime">
            -- <%= timeago_tag @issue.created_at, :nojs => true, :limit => 10.days.ago, :lang => 'zh-CN' %> ago
          </span>
        </div>
        <%= @issue.content %>
      </div>
    </article>
    <%= render partial: 'shared/comment_list', locals: {comments: @comments} %>
    <%= render partial: 'shared/comment_box' %>
  </div>
</div>




