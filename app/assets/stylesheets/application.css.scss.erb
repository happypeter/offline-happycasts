@import 'event';

$container-width: 960px;
$main-color: green;

body {
  margin: 0;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  a {
    color: $main-color;
  }
}
.container {
  width: $container-width;
  margin: 0 auto;
}

.navbar {
  background-color: green;
  height: 70px;
  color: white;

  a {
    color: white;
    text-decoration: none;
    &:hover {
      text-decoration: none;
    }
  }
  h1 {
    padding: 20px;
    padding-left: 0px;
    color: white;
    margin: 0;
  }
}

.hero {
  padding: 20px 320px 20px 0;
  background: url(<%= asset_path 'hero.png' %>) right 40px no-repeat;
}

h2 {
  font-weight: normal;
  font-size: 2em;
  margin: 1em 0 0.5em;
  font-family: inherit;
  text-rendering: optimizelegibility;
}
