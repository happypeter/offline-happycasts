@import 'event';

$container-width: 960px;
$main-color: green;

body {
  margin: 0;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  a {
    color: $main-color;
  }
}
a {
  color: white;
  text-decoration: none;
  &:hover {
    text-decoration: none;
  }
}
.container {
  width: $container-width;
  margin: 0 auto;
}

.navbar {
  background-color: green;
  height: 70px;
  color: white;

  a {
    color: white;
    text-decoration: none;
    &:hover {
      text-decoration: none;
    }
  }
  h1 {
    padding: 20px;
    padding-left: 0px;
    color: white;
    margin: 0;
  }
}

.hero {
  padding: 20px 320px 20px 0;
  background: url(<%= asset_path 'hero.png' %>) right 40px no-repeat;
}

h2 {
  font-weight: normal;
  font-size: 2em;
  margin: 1em 0 0.5em;
  font-family: inherit;
  text-rendering: optimizelegibility;
}

ul.home {
  list-style: none;
  li {
    vertical-align: middle;
    padding: 1.5em 0;
    border-bottom: 1px solid #ddd;
    cursor: pointer;
    i {
      display: inline-block;
      width: 120px;
      height: 30px;
      background-color: #D0D0D0;
      float: left;
      text-align: center;
      vertical-align: middle;
      font-size: 1em;
      color: white;
      line-height: 30px;
      font-style: normal;
      font-weight: bold;
      border-radius: 70px;
      -webkit-transition: 0.10s background-color ease-in;
      -moz-transition: 0.10s background-color ease-in;
    }
    h3 {
      height: 30px;
      margin: 0;
      margin-left: 130px;
      padding-top: 2px;
      padding-bottom: 2px;
      font-size: 26px;
      color: $main-color;
    }
    &:hover {
      i {
        background-color: $main-color;
        transition: 0.10s background-color ease-in;
        -webkit-transition: 0.10s background-color ease-in;
        -moz-transition: 0.10s background-color ease-in;
      }
      h3 {
         text-decoration: underline;
      }
    }
  }
}
